# Preferences for zathura viewer
set window-title-basename "true"
set selection-clipboard "clipboard"
set statusbar-basename "true"
set window-icon "~/dotfiles/config/zathura/pdf.svg"
set recolor "false"
map , navigate previous
map . navigate next
map <C-f> toggle_fullscreen
map [fullscreen] <C-f> toggle_fullscreen
map r reload
map R recolor
map <C-r> rotate rotate-cw
map <C-R> rotate rotate-ccw
