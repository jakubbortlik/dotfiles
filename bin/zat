#!/bin/bash
# open all files that match a parameter in zathura:

for file in "$@"
do
	if [[ -e $file ]]
	then
		e=${file##*.}
		if [ "$e" = "pdf" ] || [ "$e" = "dvi" ] || [ "$e" = "djvu" ]
		then
			zathura "$file" &> /dev/null &
		else
			echo "Use another application to open file \"$file\"."
		fi
	else
		echo "File \"$file\" does not exist."
	fi
done
