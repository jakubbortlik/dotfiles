#!/bin/bash
# Open all files that match a parameter in LibreOffice Calc.
# If no file names are given, open a new file.

if [ "$@" ]
then
	for var in "$@"
	do
		if [ -e "$var" ]
		then
			lowcalc "$var" &> /dev/null &
		else
			echo "File \"$var\" does not exist."
		fi
	done
else
	localc &> /dev/null &
fi

exit
