#!/bin/bash
# removing spaces from filenames
# rems = rem(ove) s(paces)

for var in "$@"
do
	new=`echo $var | sed -e 's/  */_/g' -e 's/_\?-_\?/-/g' -e 's/--*/-/g'`
	if [ "$new" != "$var" ]
	then
		mv "$var" `echo $var | sed -e 's/  */_/g' -e 's/_\?-_\?/-/g' -e 's/--*/-/g'`
		echo "Renamed '$var' as '$new'"
	else
		echo "No spaces to be removed from file name '$var'!"
	fi
done

exit
