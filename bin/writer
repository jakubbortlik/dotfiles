#!/bin/bash
# Open all files that match a parameter in LibreOffice Writer.
# If no file names are given, open a new file.

if [ "$@" ]
then
	for file in "$@"
	do
		if [ -e "$file" ]
		then
			lowriter "$file" &> /dev/null &
		else
			echo "File \"$file\" does not exist."
		fi
	done
else
	lowriter &> /dev/null &
fi

exit
