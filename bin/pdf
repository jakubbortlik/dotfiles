#!/bin/bash - 
#===============================================================================
#
#          FILE: pdf
# 
#         USAGE: ./pdf FILENAME.pdf
# 
#   DESCRIPTION: 
# 
#       OPTIONS: ---
#  REQUIREMENTS: ---
#          BUGS: ---
#         NOTES: ---
#        AUTHOR: YOUR NAME (), 
#  ORGANIZATION: 
#       CREATED: 10/28/2020 19:45
#      REVISION:  ---
#===============================================================================

set -o nounset                              # Treat unset variables as an error

pdf_names="$@"

if [[ $# -eq 0 ]]; then
	echo "No arguments supplied"
else
	for pdf_name in $pdf_names; do
		if [[ -r "$pdf_name" ]]; then
			DISPLAY=:0 mupdf "$pdf_name" 2>/dev/null &
		else
			echo "File ${pdf_name} does not exist or is not readable"
		fi
	done
fi

exit

